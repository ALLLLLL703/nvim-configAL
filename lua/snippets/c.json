// ~/.config/nvim/snippets/c.json
// 注意：如果你使用了 friendly-snippets，它可能已经包含了类似的片段
{
  "If Statement (selection)": {
    "prefix": "if_sel", // 触发词
    "body": [
      "if (${1:condition}) {",
      "\t$TM_SELECTED_TEXT", // 选中内容将在这里被插入
      "}"
    ],
    "description": "If statement surrounding selected text"
  },
  "For Loop (selection)": {
    "prefix": "for_sel",
    "body": [
      "for (${1:init}; ${2:condition}; ${3:increment}) {",
      "\t$TM_SELECTED_TEXT",
      "}"
    ],
    "description": "For loop surrounding selected text"
  },
  "While Loop (selection)": {
    "prefix": "while_sel",
    "body": [
      "while (${1:condition}) {",
      "\t$TM_SELECTED_TEXT",
      "}"
    ],
    "description": "While loop surrounding selected text"
  }
}
